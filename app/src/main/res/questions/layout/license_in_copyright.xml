<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/license_in_copyright_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does this business license in any copyrights?"
        android:layout_marginLeft="20dp"/>

    <RadioGroup
        android:id="@+id/license_in_copyright_rad_grp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:tag="input">

        <RadioButton
            android:id="@+id/yes_license_in_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes" />

        <RadioButton
            android:id="@+id/no_license_in_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no" />

    </RadioGroup>

</merge>