<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/has_sale_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has this business had any sale in the past year?"
        android:layout_marginLeft="20dp"
        android:tag="@string/question"/>

    <RadioGroup
        android:id="@+id/has_sale_rad_grp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:tag="@string/answer">

        <RadioButton
            android:id="@+id/yes_has_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes" />

        <RadioButton
            android:id="@+id/no_has_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"/>

    </RadioGroup>

</merge>